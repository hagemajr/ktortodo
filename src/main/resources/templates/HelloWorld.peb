<html>
<head>
    <link rel="stylesheet" href="/static/bulma.min.css">
    <title>{{ websiteTitle }}</title>
</head>
<body>
<div class="container">
    <section class="hero is-info is-bold is-rounded">
        <div class="hero-body">
            <div class="container">
                <h1 class="title">
                    ToDo List
                </h1>
                <h2 class="subtitle">
                    My Todo Implementation
                </h2>
            </div>
        </div>
    </section>
    <br/>
    <div class="columns is-centered">
        <div class="column is-half">
            <div class="section">
                <div class="field has-addons">
                    <p class="control is-expanded">
                        <input class="input" type="text" placeholder="What do you need to do?">
                    </p>
                    <p class="control">
                        <a class="button is-info">
                            Add Todo
                        </a>
                    </p>
                </div>
                <br/>
                <div class="tabs is-centered">
                    <ul>
                        <li class="is-active"><a>Not Done</a></li>
                        <li><a>Done</a></li>
                    </ul>
                </div>
                <div class="box">
                    <div class="field is-grouped">
                        <p class="control is-expanded">
                            <label class="label">Todo</label>
                        </p>
                        <p class="control">
                            <a class="button is-info">
                                Edit
                            </a>
                        </p>
                        <p class="control">
                            <a class="button is-danger">
                                Complete
                            </a>
                        </p>
                    </div>
                </div>
                <div class="box">
                    <div class="field is-grouped">
                        <p class="control is-expanded">
                            <label class="label">Todo</label>
                        </p>
                        <p class="control">
                            <a class="button is-info">
                                Edit
                            </a>
                        </p>
                        <p class="control">
                            <a class="button is-danger">
                                Complete
                            </a>
                        </p>
                    </div>
                </div>
                <div class="box">
                    <div class="field is-grouped">
                        <p class="control is-expanded">
                            <label class="label">Todo</label>
                        </p>
                        <p class="control">
                            <a class="button is-info">
                                Edit
                            </a>
                        </p>
                        <p class="control">
                            <a class="button is-danger">
                                Complete
                            </a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<footer class="footer">
    <div class="content has-text-centered">
        <p>
            A POC by John Hageman
        </p>
    </div>
</footer>
</body>
</html>